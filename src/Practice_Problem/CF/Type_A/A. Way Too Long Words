/*
Question Name: A. Way Too Long Words
Question Link: https://codeforces.com/problemset/problem/71/A
*/
import java.util.*;

public class Main{
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int t = sc.nextInt();
        while (t > 0) {
            String str = sc.next();
            // Calling the Required Function:
            // Change the line below:
            /////////////////////////////////
            fun(str); // void function:

            /////////////////////////////////
            // Change the line above:
            t--;
        }
    }

    private static void fun(String s) {
        int len = s.length();
        int lenInBw = s.length() -2;
        char firstChar = s.charAt(0);
        char lastChar = s.charAt(s.length() - 1);

        // Creating SB :
        StringBuilder sb = new StringBuilder();
        if (len > 10) {
            sb.append(firstChar);
            sb.append(lenInBw);
            sb.append(lastChar);
        }
        else {
            sb.append(s);
        }

        // Print
        System.out.println(sb.toString());
    }
}